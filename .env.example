# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_client_id_here
WORKER_TOKENS=worker_tokens

# Guild ID restriction (Optional - leave empty to work in all guilds)
GUILD_ID=your_guild_id_here

# Speech-to-Text Configuration
# Modes: 'local' (WhisperX) or 'cloud' (Deepgram)
STT_MODE=cloud

# WhisperX model (tiny, base, small, medium, large-v2, large-v3)
WHISPER_MODEL=large-v2

# Compute type for WhisperX (float16, float32, int8)
# Use float16 for GPU, int8 for CPU
COMPUTE_TYPE=float16
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# HuggingFace Token (Required for local mode - pyannote speaker diarization)
# Get yours at: https://huggingface.co/settings/tokens
# Also accept pyannote terms at: https://huggingface.co/pyannote/speaker-diarization-3.1
HF_TOKEN=hf_token

# Cleanup Configuration
CLEANUP_TEMP_FILES=true

# Tailscale Configuration (For Deployment)
# Generate from https://login.tailscale.com/admin/settings/keys
TAILSCALE_AUTH_KEY=tskey-auth-xxx
# Tailscale IP of the exit node (e.g. 100.x.y.z)
TAILSCALE_EXIT_NODE_IP=